// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int          @id @default(autoincrement())
  name                String
  email               String
  password            String
  createdAt           DateTime     @default(now()) @map(name: "created_at")
  updatedAt           DateTime     @updatedAt @map(name: "updated_at")
  startedTransaction  Transaction? @relation(name: "user_started_transaction")
}

model Transaction {
  id         Int      @id @default(autoincrement())
  amount     Int
  sender     User     @relation("user_started_transaction", fields: [senderId], references: [id])
  senderId   Int      @unique
  receiverId Int      @unique
  currency   String
  rate       Float
  createdAt  DateTime @default(now()) @map(name: "created_at")
  updatedAt  DateTime @updatedAt @map(name: "updated_at")
}
